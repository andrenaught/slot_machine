<div local-class="page-container" class="layout-column layout-align-center-center flex">
	<h3 local-class="page-title" class="flex-none">SLOT MACHINE</h3>

	<div class="flex-none">
		{{#if session.isAuthenticated}}
				{{#paper-button local-class="action-btn" noink=true primary=true onClick=(action "signOut")}}EXIT GAME{{/paper-button}}
		{{else}}
				{{#paper-button local-class="action-btn" noink=true primary=true onClick=(action "signIn" "google")}}START GAME{{/paper-button}}
		{{/if}}
	</div>
</div>